package Core_Java_samples;

public class Factorial {
	public static void main(String[] args){
		int n = 6;
		int b=n;
		
		int i;
		for(i=1;i<n;i++){
			b = b * i;
			System.out.println(i);	
		}
		System.out.println("------------"+b);
		for(int j =(n - 1); j > 1; j--)
	    {
	            b = b * j;
	            System.out.println(j);
	    }
		System.out.println("------------"+b);
		
	}


}
